<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bgApp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTelaCalculadora"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/telaPrincipal"
        android:gravity="end|bottom"
        android:textSize="48dp"
        android:text="@string/calc_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button7"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="7"
            />

        <Button
            android:id="@+id/button8"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="8"/>

        <Button
            android:id="@+id/button9"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="9"/>

        <Button
            android:id="@+id/buttonDividir"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="operacao"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button4"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="4"
            />

        <Button
            android:id="@+id/button5"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="5"/>

        <Button
            android:id="@+id/button6"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="6"/>

        <Button
            android:id="@+id/buttonSomar"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="operacao"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="1"
            />

        <Button
            android:id="@+id/button2"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="2"/>

        <Button
            android:id="@+id/button3"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="3"/>

        <Button
            android:id="@+id/buttonSubtrair"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="operacao"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button0"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="cliclarTecla"
            android:text="0"
            />

        <Button
            android:id="@+id/buttonMultiplicacao"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="operacao"
            android:text="*"/>

        <Button
            android:id="@+id/buttonCLR"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="teclaCLR"
            android:text="CLR"/>



        <Button
            android:id="@+id/buttonIgual"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teclas"
            android:onClick="teclaIgual"
            android:text="="/>

    </LinearLayout>



</LinearLayout>

